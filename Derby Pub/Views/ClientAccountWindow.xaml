                Name="SeeOrdersButton" Click="SeeOrdersButton_Click"/>
        
        <Button Content="Deconecteaza-te" FontSize="35" HorizontalAlignment="Left" Margin="78,336,0,0" VerticalAlignment="Top" Width="290" Height="74" Name="CancelButton" Click="CancelButton_Click"/>
