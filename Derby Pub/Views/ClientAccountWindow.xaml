        <Image Margin="65,0,75.2,264.8" Source="../Assets/LogoDerby.png" Stretch="Fill"/>
        
        <Button Content="Adauga comanda" FontSize="35" HorizontalAlignment="Left" Margin="78,176,0,0" VerticalAlignment="Top" Width="290" Height="75"
